  <script>
    function updateClock() {
      const now = new Date();
      document.getElementById("clock").textContent = now.toLocaleTimeString();
      setTimeout(updateClock, 1000);
    }

    function updateBattery() {
      navigator.getBattery().then(b => {
        const update = () => {
          document.getElementById("battery").textContent = "ðŸ”‹ " + Math.round(b.level * 100) + "%";
        };
        update();
        b.addEventListener("levelchange", update);
      });
    }

    function toggleDarkMode() {
      document.body.classList.toggle("dark-mode");
      const isDark = document.body.classList.contains("dark-mode");
      localStorage.setItem("theme", isDark ? "dark" : "light");
      document.querySelector(".toggle-dark").textContent = isDark ? "â˜€ Mode Terang" : "ðŸŒ™ Mode Gelap";
    }

    if (localStorage.getItem("theme") === "dark") {
      document.body.classList.add("dark-mode");
      document.querySelector(".toggle-dark").textContent = "â˜€ Mode Terang";
    }

    updateClock();
    updateBattery();
